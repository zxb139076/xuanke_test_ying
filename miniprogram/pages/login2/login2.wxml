			<text>密码：</text>
		</view>
		<view style="flex:grow:1;">
			<input placeholder="密码" type="password" bindblur="passwordBlur"></input>
		</view>
	</view>
	<view class="hr"></view>
  <view class="signin" style="display:flex; flex-direction:row; height:300rpx;width:750rpx;">
