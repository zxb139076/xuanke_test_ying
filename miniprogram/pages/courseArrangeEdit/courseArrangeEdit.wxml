<!--pages/courseArrangeEdit/courseArrangeEdit.wxml-->
<view class="section">
	<view class="section__title">课程名称：</view>
	<input type="text" placeholder="请输入课程名称" bindinput="bindCourseChange"></input>
</view>
<view class="section">
	<view class="section__title">课程开始时间：</view>
	<picker mode="time" value="{{startTime}}" start="09:01" end="21:01" bindchange="bindStartTimeChange">
		<view class="picker">
			{{startTime}}
		</view>
	</picker>
</view>
<view class="section">
	<view class="section__title">课程结束时间：</view>
	<picker mode="time" value="{{endTime}}" start="09:01" end="21:01" bindchange="bindEndTimeChange">
		<view class="picker">
			{{endTime}}
		</view>
	</picker>
</view>
<view class="add" bindtap="saveCourseArrange" data-time="{{time}}" data-week="{{week}}">
	<button>提交</button>
</view>