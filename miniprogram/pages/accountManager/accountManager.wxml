<view class="userinfo">
	<button bindtap="userlogin" class="userinfo-avatar" style="background-image: url({{avatarUrl}})" size="default"></button>
	<view class="userinfo-nickname-wrapper">
		<text wx:if="logged">{{nickName}}</text>
		<text wx:else>点我登陆</text>
	</view>
</view>

<view class="hr"></view>

<view style="display:flex;flex-direction:column;" bindtap="showPasswordEdit">
	<view class="view_check">
		<text>修改登录密码</text>
	</view>
  <view class="view_check_bak">
		<text>定期修改登录密码，保护账户安全</text>
	</view>
</view>

<view class="hr"></view>