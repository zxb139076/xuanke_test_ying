<!--pages/courseEdit/courseEdit.wxml-->
<view class="top">
	课程编辑
</view>
<view class="section">
	<view class="section__title">课程名称</view>
	<view style="width:100%;height:20px;" class="EditContent">
		<input type="text" value="{{courseName}}" bindblur="courseNameBlur"></input>
	</view>
</view>
<view class="hr"></view>
<view class="section">
	<view class="section__title">课程描述</view>
	<view style="width:100%;height:20px;" class="EditContent">
		<input type="text" value="{{courseDetail}}" bindblur="courseDetailBlur"></input>
	</view>
</view>
<view class="hr"></view>
<view class="add" bindtap="saveEditCourse">
	<button>提交</button>
</view>